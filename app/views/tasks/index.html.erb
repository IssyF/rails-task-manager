<h1>My tasks</h1>

<%= link_to 'Add new task', new_task_path %>

<% @tasks.each do |task| %>
  <p>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title.capitalize, task_path(task) %>
    <%= link_to (fa_icon "trash-alt"), task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %>
  </p>

<% end %>
